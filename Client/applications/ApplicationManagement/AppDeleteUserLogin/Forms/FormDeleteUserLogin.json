
{
	"controls": 
	[
		{
			"type" : "formgroup", "height" : "70%",
			"controls" :
			[
				{
					"type": "row",
					"controls" : 
					[{ "type" : "hidden", "id":"txtIdUser", "name":"txtIdUser", "dataField":"IdUser" }]
				}
				,
				{
					"type": "row",
					"controls" : 
					[{ "type" : "label", "id":"lblInfo", "name":"lblInfo", "text":"Are you sure?" }]
				}

			]
		}
		,
		{
			"type": "row", "style" : "padding-left: 10px; padding-right: 10px; padding-top: 0px",
			"controls":
			[
				{ "type":"button", "label":"Yes", "iconClass": "fa fa-check", "onclick":"delete()" },
				{ "type":"button", "label":"No", "iconClass": "fa fa-arrow-left", "onclick":"close()" }
			]
		}
	]
}
